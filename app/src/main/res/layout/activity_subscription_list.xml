                android:layout_height="match_parent"
                android:text="LOOKIE CAFE"
                android:layout_gravity="left"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:layout_marginLeft="70dp"/>

            <TextView
