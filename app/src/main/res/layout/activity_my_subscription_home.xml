<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mypage.MySubscriptionHome"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/go_back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:background="@color/white"
            android:src="@drawable/arrow_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter_regular"
            android:padding="10dp"
            android:text="내 구독 관리"
            android:textColor="#3A4CA8"
            android:textSize="24dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/round_rectangle"
                android:layout_margin="14dp"
                android:elevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:src="@drawable/image_01"
                    android:scaleType="centerCrop"
                    android:background="@drawable/round_rectangle_top"
                    android:clipToOutline="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="260dp"
                    android:padding="18dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_regular"
                    android:textFontWeight="1000"
                    android:text="1단계 구독권"
                    android:textColor="#202020"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="290dp"
                    android:padding="18dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_regular"
                    android:textFontWeight="1000"
                    android:text="가격, 대여 가능한 텀블러 정보"
                    android:textColor="#515151"/>
                <Button
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_rectangle"
                    android:backgroundTint="@color/blue"
                    android:text="현재 구독 중"
                    android:fontFamily="@font/inter__bold"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:elevation="15dp"/>
                <Button
                    android:id="@+id/button_to_subscription1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"/>
                
                



            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@drawable/round_rectangle_notice"
                android:elevation="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/image_03"
                    android:background="@drawable/round_rectangle_left"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="140dp"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2단계 구독권"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_regular"
                        android:textFontWeight="1000"
                        android:layout_marginTop="3dp"/>
                    <TextView
                        android:id="@+id/subscribe2_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="가격"
                        android:textSize="13dp"
                        android:textColor="#616161"
                        android:fontFamily="@font/inter_regular"
                        android:textFontWeight="1000"/>
                    <TextView
                        android:id="@+id/the_number_of_available_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="대여 가능한 텀블러"
                        android:textSize="13dp"
                        android:textColor="#616161"
                        android:fontFamily="@font/inter_regular"
                        android:textFontWeight="1000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="할인률"
                        android:textSize="13dp"
                        android:textColor="#616161"
                        android:fontFamily="@font/inter_regular"
                        android:textFontWeight="1000"
                        android:id="@+id/discount_rate_2"/>

                </LinearLayout>

                <ImageButton
                    android:layout_width="22dp"
                    android:layout_height="25dp"
                    android:layout_marginVertical="50dp"
                    android:layout_marginLeft="320dp"
                    android:backgroundTint="#BABABA"
                    android:background="@drawable/icon_next" />

                <Button
                    android:id="@+id/button_to_subscription2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"/>

            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@drawable/round_rectangle_notice"
                android:elevation="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/image_03"
                    android:background="@drawable/round_rectangle_left"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="140dp"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3단계 구독권"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_regular"
                        android:textFontWeight="1000"
                        android:layout_marginTop="3dp"/>
                    <TextView
                        android:id="@+id/subscribe3_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="가격"
                        android:textSize="13dp"
                        android:textColor="#616161"
                        android:fontFamily="@font/inter_regular"
                        android:textFontWeight="1000"/>
                    <TextView
                        android:id="@+id/the_number_of_available_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="대여 가능한 텀블러"
                        android:textSize="13dp"
                        android:textColor="#616161"
                        android:fontFamily="@font/inter_regular"
                        android:textFontWeight="1000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="할인률"
                        android:textSize="13dp"
                        android:textColor="#616161"
                        android:fontFamily="@font/inter_regular"
                        android:textFontWeight="1000"
                        android:id="@+id/discount_rate_3"/>

                </LinearLayout>

                <ImageButton
                    android:layout_width="22dp"
                    android:layout_height="25dp"
                    android:layout_marginVertical="50dp"
                    android:layout_marginLeft="320dp"
                    android:backgroundTint="#BABABA"
                    android:background="@drawable/icon_next" />

                <Button
                    android:id="@+id/button_to_subscription3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"/>

            </FrameLayout>

            <Button
                android:id="@+id/change_subscription"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/round_rectangle"
                android:backgroundTint="@color/blue"
                android:text="구독권 변경하기"
                android:fontFamily="@font/inter_regular"
                android:textFontWeight="1000"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                android:elevation="30dp"/>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/rental"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:src="@drawable/rental"
            android:gravity="center" />

        <ImageView
            android:id="@+id/return_tumbler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:src="@drawable/return_tumbler"
            android:gravity="center" />

        <ImageView
            android:id="@+id/mypage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:src="@drawable/mypage"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>