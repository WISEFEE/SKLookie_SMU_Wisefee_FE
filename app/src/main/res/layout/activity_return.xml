<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/go_back_button"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:src="@drawable/arrow_icon"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/title_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="텀블러 반납"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="21sp"
            android:layout_weight="2"
            android:fontFamily="@font/inter_regular"
            android:textFontWeight="600"
            android:textColor="#3A4CA8"/>

        <ImageButton
            android:id="@+id/notification_button"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:src="@drawable/notification_icon"
            android:background="@color/white"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="115dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/round_rectangle_notice"

                android:orientation="horizontal"
                android:padding="0dp">


                <ImageView
                    android:id="@+id/coffee_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|left"
                    android:layout_weight="1"
                    android:background="@drawable/round_rectangle_left"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/image_03"
                    android:clipToOutline="true"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:padding="13dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="카부 카페"
                        android:textColor="#393939"
                        android:textFontWeight="800"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="운영시간 7:00 ~ 22:00 "
                        android:textColor="#393939"
                        android:textFontWeight="600"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="반납 기한 "
                        android:textColor="#393939"
                        android:textFontWeight="600"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="73dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="대여 건수 "
                        android:textColor="#393939"
                        android:textFontWeight="600"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="56dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="23.06.19"
                        android:textColor="#ff0000"
                        android:textFontWeight="600"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="74dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="1"
                        android:textColor="#ff0000"
                        android:textFontWeight="600"
                        android:textSize="10dp" />

                    <android.widget.Button
                        android:id="@+id/return_button"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="133dp"
                        android:layout_marginTop="56dp"
                        android:background="@drawable/round_rectangle"
                        android:backgroundTint="@color/blue"

                        android:singleLine="true"
                        android:text="반납"
                        android:textColor="@color/white"
                        android:textFontWeight="800"
                        android:textSize="13sp" />


                </FrameLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/home_vector"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/rentalTumbler_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/rental_vector"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/returnTumbler_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/return_tumbler_vector"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/myPage_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/mypage_vector"
            android:background="@color/white"/>

    </LinearLayout>

</LinearLayout>


